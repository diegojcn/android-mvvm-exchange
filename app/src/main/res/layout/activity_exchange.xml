<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".app.exchange.ExchangeActivity"
        android:id="@+id/layout2">

    <data>

        <import type="android.view.View"/>

        <variable
                name="viewModel"
                type="br.com.exchange.app.exchange.viewmodel.ExchangeActivityViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
        <androidx.appcompat.widget.Toolbar
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:background="@color/toolBar"
                android:theme="?attr/actionBarTheme"
                android:minHeight="?attr/actionBarSize"
                android:id="@+id/toolbar" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:popupTheme="@style/AppTheme.PopupOverlay" app:titleTextColor="#FFFFFF"
                app:layout_constraintHorizontal_bias="0.0">
        </androidx.appcompat.widget.Toolbar>


        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="TIPO MOEDA"
                app:layout_constraintTop_toTopOf="@+id/spinnerTo"
                android:labelFor="@id/spinnerTo"
                android:layout_marginTop="50dp"
                app:layout_constraintBottom_toBottomOf="@+id/toolbar"
                android:id="@+id/labelSpinner"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="10dp"
        />

        <androidx.appcompat.widget.AppCompatSpinner
                android:layout_width="381dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerTo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="23dp"
                android:imeOptions="actionNext"
                android:layout_marginStart="10dp"
                android:spinnerMode="dialog"
                app:layout_constraintHorizontal_bias="0.562"
                app:layout_constraintTop_toBottomOf="@+id/labelSpinner"
                android:tag="to"/>

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="395dp"
                android:layout_height="wrap_content"
                android:id="@+id/input_newValue"
                android:layout_marginEnd="23dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="23dp"
                app:layout_constraintTop_toBottomOf="@+id/spinnerTo"
                android:layout_marginTop="30dp">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionGo"
                    android:inputType="numberDecimal"
                    android:hint="Valor a ser convertido"
                    android:text="@={viewModel.valueTo}"
                    style="@style/modal_material_input_edit_text"
                    android:id="@+id/edit_textnewvalue"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="MOEDA DESEJADA"
                android:labelFor="@id/spinnerFrom"
                android:id="@+id/labelSpinnerDesiredCoin"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="93dp"
                app:layout_constraintTop_toBottomOf="@+id/input_newValue"
                app:layout_constraintBottom_toTopOf="@+id/spinnerFrom"/>

        <androidx.appcompat.widget.AppCompatSpinner
                android:layout_width="381dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerFrom"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="23dp"
                android:layout_marginStart="10dp"
                android:imeOptions="actionNext"
                android:spinnerMode="dialog"
                app:layout_constraintHorizontal_bias="0.937"
                app:layout_constraintTop_toBottomOf="@+id/labelSpinnerDesiredCoin"
                android:tag="from"/>


        <LinearLayout
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/input_newValueDesiredCoin"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toBottomOf="@+id/spinnerFrom"
                android:layout_marginTop="30dp" android:layout_marginEnd="10dp">

            <TextView android:text="CONVERSÃO:"
                      android:layout_width="100dp"
                      android:layout_height="wrap_content"/>

            <TextView android:text="@{viewModel.valueFrom}"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"/>

        </LinearLayout>

        <Button
                android:text="Converter"
                android:textColor="#FFFFFF"
                android:layout_width="228dp"
                android:layout_height="93dp"
                android:id="@+id/btnconverter"
                android:background="@color/buttons"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@+id/input_newValueDesiredCoin"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"/>
        <Button
                android:text="Histórico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/historyBtn"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="@+id/toolbar"
                android:layout_marginEnd="8dp" android:layout_marginBottom="5dp"
                app:layout_constraintBottom_toBottomOf="@+id/toolbar" app:layout_constraintVertical_bias="1.0"
                android:layout_marginTop="5dp" android:background="@color/buttons" android:shadowColor="#000A0A0A"
                android:textColor="#FFFFFF"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>